<!-- ** Handle colors by company  -->

<% 
  if ( 
    session.user.id_company == 36 ||
    session.user.id_company == 5 ||
    session.user.id_company == 10 ||
    session.user.id_company == 39
  ) { 
%>
  <style>
    .bg-gradient-primary {
      background: linear-gradient(310deg, rgba(250,117,124,1) 0%, rgba(216,8,17,1) 100%) !important;
    }

    .activeNav .icon {
      color: white !important;
      background: linear-gradient(310deg, rgba(250,117,124,1) 0%, rgba(216,8,17,1) 100%) !important;
    }

    .badge-primary {
      color: white;
      background :rgba(250,117,124,1) !important;
    }

    .dataTable-pagination .active a, .dataTable-pagination .active a:focus, .dataTable-pagination .active a:hover {
      background: transparent;
      background: linear-gradient(310deg, rgba(250,117,124,1) 0%, rgba(216,8,17,1) 100%) !important;
      box-shadow: 0 3px 5px -1px rgb(0 0 0 / 9%), 0 2px 3px -1px rgb(0 0 0 / 7%);
      color: #fff;
      border: none;
      border-radius: 50% !important;
    }

    .btn-primary {
      color: #fff;
      background-color: #d80811 !important;
      border-color: #d80811 !important; }
      .btn-primary:hover {
        color: #fff;
        background-color: #d80811 !important;
        border-color: #d80811 !important; }
      .btn-check:focus + .btn-primary, .btn-primary:focus {
        color: #fff;
        background-color: #d80811 !important; 
        border-color: #d80811 !important;
        box-shadow: 0 0 0 0.2rem rgba(250,117,124,1); }
      .btn-check:checked + .btn-primary,
      .btn-check:active + .btn-primary, .btn-primary:active, .btn-primary.active,
      .show > .btn-primary.dropdown-toggle {
        color: #fff;
        background-color: #d80811 !important;
        border-color: #d80811 !important; }
        .btn-check:checked + .btn-primary:focus,
        .btn-check:active + .btn-primary:focus, .btn-primary:active:focus, .btn-primary.active:focus,
        .show > .btn-primary.dropdown-toggle:focus {
          box-shadow: 0 0 0 0.2rem rgba(250,117,124,1); }
      .btn-primary:disabled, .btn-primary.disabled {
        color: #fff;
        background-color: #d80811 !important;
        border-color: #d80811 !important; }

    .bg-primary {
      background-color: #d80811 !important; 
    }
  </style>
<% 
  } 
%>

